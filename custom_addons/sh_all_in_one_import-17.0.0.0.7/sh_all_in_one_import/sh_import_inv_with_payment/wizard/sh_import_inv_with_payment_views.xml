<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--import Invoice with payment wizard-->
    <record id="sh_import_inv_with_payment_wizard" model="ir.ui.view">
        <field name="name">sh.import.inv.with.payment.wizard</field>
        <field name="model">sh.import.inv.with.payment</field>
        <field name="arch" type="xml">
            <form string="Import Invoice">
                <group>
                    <group>
                        <field name="import_type" widget="radio" />
                        <field name="product_by" widget="radio" />
                        <field name="invoice_type" widget="radio" />
                        <field name="sh_partner_by" widget="radio" />
                        <field name="file" />
                    </group>
                    <group>
                        <field name="account_option" widget="radio" />
                        <field name="is_validate" />
                        <field name="is_payment" invisible="not is_validate" />
                        <field name="payment_no_seq" widget="radio" invisible="not is_payment" />
                        <field name="payment_option" widget="radio" invisible="not is_payment" />
                        <field name="write_off_account_id" invisible="payment_option=='partial'" required="payment_option=='write_off'" />
                        <field name="inv_no_type" widget="radio" />
                    </group>
                </group>
                <footer>
                    <button name="import_inv_apply" string="Apply" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />

                    <div style="float: right;">
                        <strong>Download Sample:</strong>
                        <a
                            href="/sh_all_in_one_import/static/csv/import_inv_with_payment_csv.csv"
                            role="button" class="btn-primary"
                            style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download" /> CSV file </a>
                        <a
                            href="/sh_all_in_one_import/static/xls/import_inv_with_payment_excel.xls"
                            role="button" class="btn-primary"
                            style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download" /> Excel file </a>
                    </div>
                </footer>
            </form>
        </field>
    </record>
    <record id="sh_import_inv_with_payment_action" model="ir.actions.act_window">
        <field name="name">Import Invoice</field>
        <field name="res_model">sh.import.inv.with.payment</field>
        <field name="view_id" ref="sh_import_inv_with_payment_wizard" />
        <field name="target">new</field>
    </record>
</odoo>