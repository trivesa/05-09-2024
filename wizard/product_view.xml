<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<record id="import_product_wizard_view" model="ir.ui.view">
			<field name="name">wizard for import product from csv and excel file </field>
			<field name="model">import.product</field>
			<field name="arch" type="xml">
				<form string="Import Product">
				
					<group>
						<div invisible="product_option == 'create'" style="width:100%;">
					    	<p style="color:red;width:max-content;"><strong>If selected option as Update Product with Import Variants that's only possible with Search By Name</strong></p>
					  	</div>
					</group>
				
                    <group>
                    	<group>
                    		<field name="product_option" widget="radio" />
                    	</group>
                    	<group>
	                    	<field name="with_variant"/>
	                    </group>
	                </group>
                    <group>
                        <field name="product_search" widget="radio" invisible="product_option == 'create'"/>
                    </group>
					<group>
						<field name="filename" invisible="1"/>
						<field name="file" filename="filename" />
					</group>
					
					<group>
                        <group string="Download Sample XLS and CSV Files">
                            <field name="down_samp_file" widget="checkbox" />
<!--                             <field name="sample_option" widget="radio" attrs="{'invisible': [('down_samp_file', '=', False)]}"/> -->
                            <button name="download_auto" string="Download Sample File" type="object" class="oe_highlight" invisible="not down_samp_file"/>
                        </group>
                    </group>
					
					<footer>
						<button name="import_product" string="Import" type="object" />
					</footer>
				</form>
			</field>
		</record>

		<record id="import_product_wizard" model="ir.actions.act_window">
			<field name="name">Import Product Template</field>
			<field name="res_model">import.product</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem action="import_product_wizard" id="menu_product_wizard_import"
			parent="sale.product_menu_catalog" />

	</data>
</odoo>
 
